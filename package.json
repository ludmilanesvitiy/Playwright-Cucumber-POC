    "@types/fs-extra": "11.0.4",
    "allure-cucumberjs": "2.9.2",
    "chai": "4.3.10",
    "cucumber-console-formatter": "1.0.0",
    "cucumber-html-reporter": "7.1.1",
    "dotenv": "16.3.1",
    "playwright": "1.29.1",
    "fs-extra": "11.1.1",
    "rimraf": "5.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
